<Window x:Class="Lab_rab1_1_KutlubaevA.D._БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЛР1 — Вариант 4 (Время)" Height="280" Width="500">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="8" VerticalAlignment="Center">Часы (0-23):</TextBlock>
        <TextBox x:Name="HoursBox" Grid.Row="0" Grid.Column="1" Margin="8" Width="120"
                 PreviewTextInput="TextBox_PreviewTextInput"
                 PreviewKeyDown="TextBox_PreviewKeyDown"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="8" VerticalAlignment="Center">Минуты (0-59):</TextBlock>
        <TextBox x:Name="MinutesBox" Grid.Row="1" Grid.Column="1" Margin="8" Width="120"
                 PreviewTextInput="TextBox_PreviewTextInput"
                 PreviewKeyDown="TextBox_PreviewKeyDown"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="8" VerticalAlignment="Top">Секунды (0-59):</TextBlock>
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="8" Orientation="Vertical">
            <TextBox x:Name="SecondsBox" Width="120" Margin="0,0,0,8"
                     PreviewTextInput="TextBox_PreviewTextInput"
                     PreviewKeyDown="TextBox_PreviewKeyDown"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="BtnFullMinutes" Content="Полные минуты" Width="140" Margin="0,0,8,0"
                        Click="BtnFullMinutes_Click"/>
                <Button x:Name="BtnMinus10" Content="−10 минут" Width="120"
                        Click="BtnMinus10_Click"/>
            </StackPanel>

            <TextBlock Text="Результат:" FontWeight="Bold"/>
            <TextBlock x:Name="ResultText" Text="—" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
